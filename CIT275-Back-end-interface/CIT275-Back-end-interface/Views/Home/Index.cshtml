@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Interactive Aerial Log Management System";
}
<div class="centered">
    <div class="jumbotron">
        <h1>Interactive Aerial</h1>
        @if (User.Identity.GetUserName() == "" || User.Identity.GetUserName() == null)
        {
            <p class="lead">Welcome!</p>
        }
        else
        {
            <p class="lead">Welcome, @User.Identity.GetUserName()!</p>
        }
    </div>

    @if (User.Identity.IsAuthenticated)
    {
        if (User.IsInRole("Admin") || User.IsInRole("Staff"))
        {
    <div class="row">
        <div class="col-md-3 col-md-offset-2">
            <h2>Clients</h2>
            <p>
                This page will take you to a list of current clients. It will provide you the tools to create, update, view, and delete active client accounts as well as
                configure active and inactive accounts.
            </p>
            <p><a class="btn btn-default" href="~/Clients/Index">View Clients &raquo;</a></p>
        </div>
        <div class="col-md-3">
            <h2>Logs</h2>
            <p>
                This page will take you to a list of logs with search and filter functionality. Go here to create, update, view, delete, and download specific logs or log packages.
            </p>
            <p><a class="btn btn-default" href="~/FileLogs/Index">View Logs &raquo;</a></p>
        </div>
        <div class="col-md-3">
            <h2>How To</h2>
            <p>
                Learn how to use the features of this website!
            </p>
            <p><a class="btn btn-default" href="~/Home/Documentation">How To &raquo;</a></p>
        </div>
    </div>
        }
        else if (User.IsInRole("Client"))
        {
            <div class="row">
                <div class="col-md-4 col-md-offset-2">
                    <h2>Client Portal</h2>
                   
                    <p><a class="btn btn-default" href="~/Ftp/Index">Telemetry File Uploads &raquo;</a></p>
                </div>
                <div class="col-md-4">

                    <p>
                        For more information about what we do, please visit us at <a href="http://www.interactiveaerial.com/">Interactive Aerial Home Page</a>
                    </p>
                    <p>
                        If you would like a customer service representative to call, please click the button:
                    </p>
                    <p><a class="btn btn-default" href="http://www.interactiveaerial.com/contact-us.html">Contact Us &raquo;</a></p>
                </div>
            </div>
        }
        else {

        }
    }
    else
    {
        <div class="row">
            <div class="col-md-4 col-md-offset-2">
                <h2>Members</h2>
                <p>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "btn btn-primary  " })</p>
                
            </div>
            <div class="col-md-4">
                
                <p>
                    For more information about what we do, please visit us at <a href="http://www.interactiveaerial.com/">Interactive Aerial Home Page</a>
                </p>
                <p>
                    If you would like a customer service representative to call, please click the button:
                </p>
                <p><a class="btn btn-default" href="http://www.interactiveaerial.com/contact-us.html">Contact Us &raquo;</a></p>
            </div>
        </div>
    }

</div>